<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head',{stylesheets: 'styles.css'}) 
 %>  
<body class="profile">
    <%- include('./partials/header') %> 
   <main class="profile__main mt-4">
    <h1 >Mi Perfil</h1>
    <hr>
    <div class="profile__main--imagen">
        <img class="img-fluid" id="avatar-preview" src="/images/<%= user.avatar %>" alt="">

    </div>
     
            <form action="/users/profile?_method=PUT" class="form" enctype="multipart/form-data" method="post" id="form-profile">

               

                <div class="inputContainer">
                    <label class="label" for="firstname">Nombre</label></br>
                    <input type="text" class="form-control" value="<%= user.firstname %>" name="firstname" id="firstname">
                    <p><%= locals.errors && errors.firstname ? errors.firstname.msg : null %></p>
                    <p class="text-danger" id="msgFirstname"></p>
                </div>

                <div class="inputContainer">
                    <label class="label" for="lastname">Apellido</label></br>
                    <input type="text" class="form-control" value="<%= user.lastname%>" name="lastname" id="lastname">
                    <p><%= locals.errors && errors.lastname ? errors.lastname.msg : null %></p>
                    <p class="text-danger" id="msgLastname"></p>
                </div>

                <div class="inputContainer">
                    <label for="avatar" id="btnRegister" style="text-align: center;">Imagen de perfil</label></br>
                    <input type="file" name="avatar" id="avatar" accept="image/*">
                    <p><%= locals.errors && errors.avatar ? errors.avatar.msg : null %></p>
                    <p class="text-danger" id="msgAvatar"></p>
                </div>

             
                <div class="text-end">
                    <button type="submit" class="btn btn-dark" id="btn-submit" disabled>Guardar</button>     
                    <a href="/" class="btn btn-dark">Cancelar</a>             
                </div>

            </form>


   </main>
   
   <%- include('./partials/footer') %> 
   <%- include('./partials/scripts') %> 
   <script src="/js/perfilValidacion.js"> </script>   

</body>
</html>