<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head',{title: 'Home' ,stylesheets: 'home.css' }) %>

  <body class="home">
    <%- include('./partials/header') %>
      <section class="home__main__banner">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
              aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
              aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
              aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
              aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4"
              aria-label="Slide 3"></button>

          </div>
          <div class="carousel-inner">
            <div class="carousel-item active"
              style="background-image: url('/images/banner-1.jpeg');background-size: cover;">
            </div>
            <div class="carousel-item" style="background-image: url('/images/banner-2.jpg');background-size: cover;">
            </div>
            <div class="carousel-item" style="background-image: url('/images/banner-4.png');background-size: cover;">
            </div>
            <div class="carousel-item" style="background-image: url('/images/banner-5.webp');background-size: cover;">
            </div>
            <div class="carousel-item" style="background-image: url('/images/banner-6.webp');background-size: cover;">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </section>
      <main class="home__main">
        <div id="destacados"></div>

        <section class="home__main__products row mt-4">
          <img class="home__main__img--decorativa" src="/images/lineaDecorativaSuperior.png" alt="">
          <h1>Nuestros Productos Destacados</h1>

          <% destacados.forEach(({id, name, images, price, discount,description})=> { %>
            <div class="col-12 col-md-6 col-lg-3 p-4">
              <a href="/products/detail/<%=id%>">
                <article class="home__main__products__article ">
                  <div class="home__main__products__article--image">
                    <img class="img-fluid" src="/images/<%=images[0].file%>" alt="" />
                  </div>
                 
                  <div>
                    <h2 class="mt-3">
                      <%= name %>
                    </h2>

                    <div class="col-12 detail__main__btn--cart ">

                      <a class="" href="/products/cart">
                        <p class="m-0 fs-5">LO QUIERO!</p> </i>
                      </a>
                    </div>
                    <hr class="my-1">

                    <h3>$ <%=toThousand(price) %>
                    </h3>
                  </div>


                </article>
              </a>

            </div>


            <% }) %>
              <div class="home__main__products--back col-12 ">
                <a href="#">
                  <button class="btn btn-sm btn-outline-light"><i class="fa fa-arrow-up"></i></button>
                </a>


              </div>
        </section>
        <div id="ofertas"></div>
        <section class="home__main__products row mt-4">

          <img class="home__main__img--decorativa" src="/images/lineaDecorativaSuperior.png" alt="">

          <h1>Nuestras Ofertas</h1>

          <% inSale.forEach(({id, name, images, price, discount,description})=> {
            %>
            <div class="col-12 col-md-6 col-lg-3 p-4">
              <a href="/products/detail/<%=id%>">

                <article class="home__main__products__article">
                  <img src="/images/<%=images[0].file%>" alt="" />

                  <h2 class="mt-3">
                    <%= name %>
                  </h2>
                  <div class="col-12 detail__main__btn--cart ">
                    <a class="" href="/products/cart">
                      <p class="m-0 fs-5">LO QUIERO!</p> </i>
                    </a>
                  </div>
                  <hr class="my-1">
                  <%if(discount){%>
                    <h3>$ <%=toThousand(price-(price * discount) / 100) %></h3>

                    <small class="fs-6 text-warning ">
                      <%=discount%>% OFF
                    </small>
                    <%}else{%>
                      <h3>
                        $ <%=toThousand(price)%>
                      </h3>
                      <%}%>
                </article>
              </a>
            </div>

            <% }) %>
              <div class="home__main__products--back col-12 ">
                <a href="#">
                  <button class="btn btn-sm btn-outline-light"><i class="fa fa-arrow-up"></i></button>
                </a>


              </div>
        </section>
        <div id="variedades"></div>

        <section class="home__main__categories row g-3 mt-4">
          <img class="home__main__img--decorativa" src="/images/lineaDecorativaSuperior.png" alt="">

          <h1>Nuestras Variedades</h1>
          <div class="col-12 col-md-6 col-lg-3">
            <a href=""><img src="/images/blanco.jpg" class="w-100 home__main__categories--banner" alt=""></a>
          </div>
          <div class="col-12 col-md-6 col-lg-3">
            <a href=""><img src="/images/espumoso.jpg" class="w-100 home__main__categories--banner" alt=""></a>
          </div>
          <div class="col-12 col-md-6 col-lg-3">
            <a href=""><img src="/images/rosado.jpg" class="w-100 home__main__categories--banner" alt=""></a>

          </div>
          <div class="col-12 col-md-6 col-lg-3">
            <a href=""><img src="/images/tinto.jpg" class="w-100 home__main__categories--banner" alt=""></a>
          </div>
        </section>

      </main>

      <%- include('./partials/footer') %>
        <%- include('./partials/scripts') %>
  </body>

</html>